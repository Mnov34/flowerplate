{
  "name": "flowerplate",
  "publisher": "DevGarden",
  "displayName": "Flowerplate",
  "description": "Generate boilerplate code from visual boxes",
  "version": "0.1.1",
  "icon": "./assets/images/flowerplate.png",
  "license": "MIT",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "Flowerplate",
        "properties": {
          "flowerplate.templates.tooltip.previewLines": {
            "type": "number",
            "default": 5,
            "description": "How many lines of code to show in the card tooltip."
          },
          "flowerplate.templates.customPaths": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "default": [],
            "description": "Additional absolute paths where user-defined templates live."
          },
          "flowerplate.insert.autoformat": {
            "type": "boolean",
            "default": false,
            "description": "Run editor's format command after inserting a snippet."
          },
          "flowerplate.insert.preserveSelection": {
            "type": "boolean",
            "default": false,
            "description": "If true, reselect the inserted snippet for easy overwrite."
          },
          "flowerplate.insert.setVariables": {
            "type": "boolean",
            "default": true,
            "description": "Prompt the user to fill in any TemplateVariables before insertion."
          },
          "flowerplate.insert.imports": {
            "type": "boolean",
            "default": true,
            "description": "Should the inserted template also insert it's required imports."
          },
          "flowerplate.dragAndDrop.enabled": {
            "type": "boolean",
            "default": true,
            "description": "Enable dragging cards into the editor."
          },
          "flowerplate.search.enabled": {
            "type": "boolean",
            "default": true,
            "description": "Show/hide the search bar at the top of the view."
          },
          "flowerplate.search.placeHolder": {
            "type": "string",
            "default": "Filter templates...",
            "description": "Placeholder text in the search input."
          }
        }
      }
    ],
    "commands": [
      {
        "command": "flowerplate.settings.open",
        "title": "Settings"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "flowerplateContainer",
          "title": "Flowerplate",
          "icon": "./assets/images/flowerplate.png"
        }
      ]
    },
    "views": {
      "flowerplateContainer": [
        {
          "id": "flowerplate.templates.provider",
          "name": "Template",
          "icon": "./assets/images/flowerplate.png"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "when": "view == flowerplate.templates.provider",
          "command": "flowerplate.settings.open",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.1",
    "eslint": "^9.23.0",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  }
}